<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.u16394.snacktime">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logofundo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.CadastroActivity"
            android:label="Cadastrar">
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NovidadesActivity"
            android:label="@string/title_activity_novidades"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.u16394.snacktime.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PromocoesActivity"
            android:label="Promoções"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.u16394.snacktime.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.FiltrosActivity"
            android:label="Filtrar Preferências"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.u16394.snacktime.activities.MainActivity" />
        </activity>
    </application>

</manifest>